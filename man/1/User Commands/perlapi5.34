           "is_utf8_fixed_width_buf_loclen_flags", "is_strict_utf8_string",
           "is_strict_utf8_string_loc", "is_strict_utf8_string_loclen",
           "is_c9strict_utf8_string", "is_c9strict_utf8_string_loc", and
