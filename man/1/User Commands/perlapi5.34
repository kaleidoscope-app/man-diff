           #endif
               SNPRINTF_G(fv, ebuf, sizeof(ebuf), precis);
           #ifdef USE_LOCALE_NUMERIC
               RESTORE_LC_NUMERIC();
           #endif
             }

            void  WITH_LC_NUMERIC_SET_TO_NEEDED(block)

